<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/profile_background"
    >

    <Button
        android:id="@+id/action_new_vendor"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_new_vendor"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/action_bill_of_lading"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_bill_of_lading"
        android:textStyle="bold"
        android:layout_above="@+id/action_new_vendor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Position"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/position"
        android:gravity="center"
        android:layout_above="@+id/action_bill_of_lading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_above="@+id/company"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:text="Company"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/company"
        android:gravity="center"
        android:layout_marginBottom="26dp"
        android:layout_alignBottom="@+id/position"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_company"
        android:id="@+id/imageView4"
        android:layout_above="@+id/company"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Company Settings"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
